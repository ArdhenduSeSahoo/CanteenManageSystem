@{
	Layout = "_Layout_login";
	<style>
		.welcome-text {
			font-style: italic;
			font-family: 'Segoe UI', cursive, sans-serif;
		}
	</style>
}


<div class="container h-100 w-100">
	<div class="d-flex justify-content-center align-content-center h-100">
		<div class="card">
			<div class="card-header">
				@* <h4 class="text-white">Welcome To</h4><br />
				<h5 class="text-white">ESSPL Canteen Connect</h5> *@
				<div class="text-center text-white">
					<h4 class="welcome-text" style="margin-left: -200px;">Welcome To</h4>
					<h5 class="welcome-text fs-2 mt-2">ESSPL Canteen Connect</h5>
				</div>
				<div class="d-flex justify-content-end social_icon">
					<span><i class="fab fa-facebook-square"></i></span>
					<span><i class="fab fa-twitter-square"></i></span>
				</div>
			</div>
			<div class="card-body">
				<form asp-controller="Login" asp-action="LoginUser" method="post">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text h-100"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" class="form-control" name="userId" value="" placeholder="username">

					</div>
					<div class="input-group form-group mt-2">
						<div class="input-group-prepend">
							<span class="input-group-text h-100"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" class="form-control" name="userPassword" value="" placeholder="password">
					</div>
					@* <div class="row align-items-center remember">
							<input type="checkbox">Remember Me
						</div> *@
					<br />
					<div class="form-group">
						<input type="submit" value="Login" class="btn float-right login_btn">
					</div>
					<span style="color:white">For Employees Login from E-connect Portal</span>
					<a href="https://econnect.esspl.com/" class="btn login_btn" style="width:170px">Esspl E-Connect</a><br />

					<a href="/login/testlog?empid=SD1265&empname=Ardhendu Sekhar Sahoo" class="forgot_password">userArdhndu</a>
				<a href="/login/testlog?empid=SD1158&empname=Roshni Patnaik" class="forgot_password">userRoshni</a>
				<a href="/login/testlog?empid=EMP005&empname=Ardhendu Sekhar Sahoo" class="forgot_password">userArdhndu</a>
				</form>
			</div>
			<div class="card-footer">
			</div>
		</div>

	</div>
</div>


