@{
	Layout = "_Layout_login";
}


	<div class="container h-100 w-100">
		<div class="d-flex justify-content-center align-content-center h-100">
			<div class="card">
				<div class="card-header">
					<h3>Sign In</h3>
					<div class="d-flex justify-content-end social_icon">
						<span><i class="fab fa-facebook-square"></i></span>
						<span><i class="fab fa-twitter-square"></i></span>
					</div>
				</div>
				<div class="card-body">
				<p>EMP005 SD1265 EMP002 EMP003</p>
				<form asp-controller="Login" asp-action="LoginUser" method="post">
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text h-100"><i class="fas fa-user"></i></span>
							</div>
						<input type="text" class="form-control" name="userId" value="EMP005" placeholder="username">

						</div>
						<div class="input-group form-group mt-2">
							<div class="input-group-prepend">
								<span class="input-group-text h-100"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" class="form-control" name="userPassword" value="1234" placeholder="password">
						</div>
						@* <div class="row align-items-center remember">
							<input type="checkbox">Remember Me
						</div> *@
						<br />
						<div class="form-group">
							<input type="submit" value="Login" class="btn float-right login_btn">
						</div>
					</form>
				</div>
				<div class="card-footer">
					
				</div>
			</div>
		</div>
	</div>


