@model CanteenManage.Models.CartItemListPanelViewDataModel
@*

*@
<div class="col @(Model.employeeCarts.Count()<=0?"d-none":"") ">
	<div class="card customCard">
		<div class="cardTitle fw-bold">
			@Model.panelTitle
		</div>
		<div class="card-body custom_card_body">
			<div class="table-responsive">
				<table class="table table-hover table-responsive-sm table-borderless customTable">
					<thead>
						<tr>
							<th>Date</th>
							<th>Name</th>
							<th>Quantity</th>
							<th>Price</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var order in Model.employeeCarts)
						{
							<tr data-orderid="@order.Id">
								<td>@order.OrderDate.ToString("dd-MM-ddd")</td>
								<td class="customTableBoldCell">@order.Food.Name</td>
								<td class="text-center">@order.Quantity.ToString()</td>
								<td class="" style="text-align:end">@order.TotalPrice.ToString()</td>
								<td class="align-self-center text-center align-t" style="vertical-align:middle;">
									<form asp-action="RemoveOrder" method="post">
										<input type="hidden" name="orderId" value="@order.Id" />
										<button type="submit" class="btn btn-outline-danger btn-sm" data-orderId="@order.Id">
											<i class="fa fa-trash" aria-hidden="true"></i>
										</button>
									</form>
									@* <button type="submit" class="btn btn-outline-danger btn-sm btn_Remove_Cart_Item" data-orderId="@order.Id">
										<i class="fa fa-trash" aria-hidden="true"></i>
									</button> *@
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
