@model WeeklyFoodViewModel

@{
    ViewData["Title"] = "Weekly Food List";
    Layout = "_Layout_canteenEmploy";
}

<div class="container-fluid p-0">
    <h2 class="text-center text-primary mb-2">🍽️ Weekly Food Menu</h2>
    <p class="text-muted text-center mb-4">Note: Food items are scheduled based on their availability during the month.</p>

    <!-- Week 1 Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white text-black fw-bold">
            Week 1
        </div>
        <div class="card-body">
            @if (Model.weekly1_FoodLists?.Any() == true)
            {
                <div class="row row-cols-2 g-3">
                    @foreach (var day in Model.weekly1_FoodLists)
                    {
                        <div class="col">
                            <div class="border rounded bg-light h-100 p-3">
                                <h5 class="text-secondary">@day.DayOfWeek</h5>
                                <ul class="list-unstyled">
                                    @foreach (var food in day.Foods)
                                    {
                                        <li class="mb-1 d-flex justify-content-between align-items-center">
                                            <span><i class="bi bi-dot text-danger"></i> @food.Name</span>
                                            <span class="text-danger fw-semibold">₹@food.Price</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No food items available for Week 1.</p>
            }
        </div>
    </div>



